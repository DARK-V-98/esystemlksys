{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ESNext"],
    "types": ["node"],
    "outDir": "../dist/electron",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts"]
}
