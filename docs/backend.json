{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "enum": ["user", "admin", "developer"],
          "description": "The user's role."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was created."
        },
        "lastActive": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp of the user's last activity."
        },
        "isBanned": {
            "type": "boolean",
            "description": "Whether the user is banned from accessing the system."
        },
        "ipAddress": {
            "type": "string",
            "description": "The last known IP address of the user (for informational purposes)."
        }
      },
      "required": ["uid", "name", "email", "role", "createdAt"]
    },
    "AppStatus": {
      "title": "App Status",
      "description": "Represents the global status of the application.",
      "type": "object",
      "properties": {
        "isUnderMaintenance": {
          "type": "boolean",
          "description": "Whether the application is currently under maintenance."
        }
      },
      "required": ["isUnderMaintenance"]
    },
    "AdminNotification": {
      "title": "Admin Notification",
      "description": "A system-wide notification sent by an admin.",
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "description": "The content of the notification."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "When the notification was sent."
        }
      },
      "required": ["message", "timestamp"]
    },
    "Bill": {
      "title": "Bill / Receipt",
      "description": "Represents a user-generated bill or receipt.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the bill." },
        "userId": { "type": "string", "description": "The ID of the user who created the bill." },
        "data": { "type": "string", "description": "A JSON string containing all the bill details." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userId", "data", "createdAt"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "User profile documents, keyed by user ID."
    },
    "/users/{userId}/bills/{billId}": {
      "schema": {
        "$ref": "#/entities/Bill"
      },
      "description": "Bills created by a specific user."
    },
    "/app-status/maintenance": {
        "schema": {
            "$ref": "#/entities/AppStatus"
        },
        "description": "A single document to control the application's maintenance status."
    },
    "/notifications/{notificationId}": {
        "schema": {
            "$ref": "#/entities/AdminNotification"
        },
        "description": "A collection of system-wide notifications."
    }
  }
}
